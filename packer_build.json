{
    "variables" :{
        "aws_access_key": "{{env `aws_access_key_id`}}",
        "aws_secret_key": "{{env `aws_secret_access_key`}}",
        "ami_region" :"{{env `aws_region`}}",
        "source_ami":"{{env `source_ami`}}",
        "instance_type": "{{env `instance_type`}}",
        "build_ami_name": "csye6225_fall_2021_{{timestamp}}",
        "ssh_username": "{{env `ssh_username`}}"
    },
    "builders" :[
        {
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "type": "amazon-ebs",
            "instance_type" : "{{user `instance_type`}}",
            "subnet_id": "{{user `subnet_id`}}",
            "source_ami": "{{user `source_ami`}}",
            "ssh_username": "{{user `ssh_username`}}",
            "ami_name" : "{{user `build_ami_name`}}",
            "ami_description": "Ubuntu AMI for CSYE 6225",
            "associate_public_ip_address": true,
            "region": "{{user `ami_region`}}",
            "ami_users" : ["167171622115","228157484555"],
            "launch_block_device_mappings" : {
                "device_name": "/dev/sda1",
                "volume_size": 8,
                "volume_type": "gp2",
                "delete_on_termination": true
            },
            "tags": {
                "Name": "{{user `build_ami_name`}}"
            }
        }
    ],
    "provisioners":[
        {
            "type": "shell",
            "inline": [
                "export DEBIAN_FRONTEND=noninteractive",
                "sudo apt-get update",
                "sudo apt-get -y upgrade",
                "curl -sL https://deb.nodesource.com/setup_16.x | sudo -E bash -",
                "sudo apt-get install -y nodejs",
                "cd /home/ubuntu",
                "wget https://aws-codedeploy-us-east-1.s3.us-east-1.amazonaws.com/latest/install",
                "chmod +x ./install",
                "sudo ./install auto"
            ]
        }
    ]
}